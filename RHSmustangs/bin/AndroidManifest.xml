<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sarangjoshi.rhsmustangs"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/rhslogo_green"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sarangjoshi.rhsmustangs.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sarangjoshi.rhsmustangs.HttpActivity"
            android:label="@string/http_name"
            android:parentActivityName="com.sarangjoshi.rhsmustangs.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sarangjoshi.rhsmustangs.MainActivity" />
        </activity>
        <activity
            android:name="com.sarangjoshi.rhsmustangs.LinksActivity"
            android:label="@string/links_name"
            android:parentActivityName="com.sarangjoshi.rhsmustangs.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sarangjoshi.rhsmustangs.MainActivity" />
        </activity>
        <activity
            android:name="com.sarangjoshi.rhsmustangs.twitter.TwitterActivity"
            android:label="@string/twitter_name"
            android:parentActivityName="com.sarangjoshi.rhsmustangs.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="come.sarangjoshi.rhsmustangs.MainActivity" />
        </activity>
        <activity
            android:name="com.sarangjoshi.rhsmustangs.DemoActivity"
            android:label="@string/twitter_name"
            android:parentActivityName="com.sarangjoshi.rhsmustangs.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="come.sarangjoshi.rhsmustangs.MainActivity" />
        </activity>
    </application>

</manifest>