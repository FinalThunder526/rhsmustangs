<Page
    x:Class="RHSMustangs.MainPageOld"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RHSMustangs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock x:Name="mainTitle" HorizontalAlignment="Left" Margin="15,15,0,-1" TextWrapping="Wrap" Text="RHS Mustangs" VerticalAlignment="Top" FontSize="52"/>
        <ListView x:Name="mainList" HorizontalAlignment="Left" Margin="15,73,0,0" VerticalAlignment="Top" MinWidth="2" Width="360" >
            <ListViewItem Content="Links" FontSize="36" Tapped="linksTapped"/>
            <ListViewItem Content="Schedule" FontSize="36" Tapped="scheduleTapped" />
        </ListView>
    </Grid>
</Page>
